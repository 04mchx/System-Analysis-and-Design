@{
    ViewBag.Title = "使用者登入";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        nav, footer {
            display: none !important;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f8f9fa;
        }

        .login-container {
            background: #ffffff;
            border: 1px solid #ddd;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            max-width: 400px;
            padding: 20px;
            text-align: center;
            box-sizing: border-box;
            margin: auto; /* 保證容器在視覺上置中 */
        }

            .login-container h1 {
                color: #6a0dad;
                margin-bottom: 20px;
                font-size: 1.8rem;
            }

        .input-field {
            margin-bottom: 20px;
            position: relative;
        }

            .input-field label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
                color: #333;
                text-align: left;
            }

            .input-field input {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 4px;
                font-size: 1rem;
            }

        .password-container .fa-eye {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
        }

        .login-button {
            width: 100%;
            padding: 10px;
            background-color: #6a0dad;
            color: #fff;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
            cursor: pointer;
        }

            .login-button:hover {
                background-color: #580b92;
            }

        .additional-links {
            margin-top: 15px;
            font-size: 0.9rem;
        }

            .additional-links a {
                color: #6a0dad;
                text-decoration: none;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <h1>@ViewBag.Title</h1>

        @if (ViewBag.ErrorMessage != null)
        {
            <div style="color: red; margin-bottom: 15px;">
                @ViewBag.ErrorMessage
            </div>
        }

        <form method="post" action="/User/UserAuthenticate">
            <div class="input-field">
                <label for="UserName">使用者名稱:</label>
                <input type="text" id="UserName" name="UserName" required>
            </div>

            <div class="input-field password-container">
                <label for="password">密碼:</label>
                <input type="password" id="password" name="password" required>
                <i class="fas fa-eye" id="togglePassword"></i>
            </div>

            <button type="submit" class="login-button">登入</button>
        </form>

        <div class="additional-links">
            <p>忘記密碼？<a href="/User/UserForgotPassword">重置密碼</a></p>
            <p>尚未註冊？<a href="/User/Register">註冊</a></p>
        </div>
    </div>

    <script>
        const togglePassword = document.getElementById('togglePassword');
        const passwordField = document.getElementById('password');
        togglePassword.addEventListener('click', function () {
            const type = passwordField.type === "password" ? "text" : "password";
            passwordField.type = type;
            this.classList.toggle('fa-eye-slash');
        });
    </script>
</body>
