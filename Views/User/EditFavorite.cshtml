@model dbFinal.Models.favorite

@{
    ViewBag.Title = "喜好設定";
    Layout = "~/Views/Shared/_UserLayout.cshtml"; // 使用已定義的 User 專用 Layout
}

<div class="container mt-5">
    <div class="form-container bg-white shadow p-4 rounded">
        <h2 class="text-center text-primary">@ViewBag.Title</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <p class="text-success text-center">@TempData["SuccessMessage"]</p>
        }

        <form method="post" asp-action="EditFavorite">
            <!-- Cuisine -->
            <div class="form-group mb-3">
                <label for="FAV_CUISINE" class="form-label">喜歡的菜系</label>
                <textarea id="FAV_CUISINE" name="FAV_CUISINE" class="form-control" placeholder="例如：義大利料理、日本料理">@Model?.FAV_CUISINE</textarea>
            </div>

            <!-- Kind -->
            <div class="form-group mb-3">
                <label for="FAV_KIND" class="form-label">喜歡的種類</label>
                <textarea id="FAV_KIND" name="FAV_KIND" class="form-control" placeholder="例如：甜點、燒烤">@Model?.FAV_KIND</textarea>
            </div>

            <!-- Allergies -->
            <div class="form-group mb-3">
                <label for="FAV_ALLERGIES" class="form-label">過敏成分</label>
                <textarea id="FAV_ALLERGIES" name="FAV_ALLERGIES" class="form-control" placeholder="例如：花生、海鮮">@Model?.FAV_ALLERGIES</textarea>
            </div>

            <button type="submit" class="btn btn-primary w-100">保存修改</button>
        </form>
    </div>
</div>
