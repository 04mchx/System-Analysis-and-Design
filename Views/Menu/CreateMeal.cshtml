@model meal
@{
    Layout = "~/Views/Shared/_RestaurantLayout.cshtml"; // 針對 Restaurant 的 Layout
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>新增餐點</title>
    <!-- 引入登入頁面的 CSS -->
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>

        /* General Form Styling */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 50px auto;
            padding: 30px;
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #6a0dad;
            text-align: center;
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: bold;
            color: #333;
        }

        .form-control {
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 10px;
            font-size: 14px;
        }

        .btn {
            background-color: #6a0dad;
            color: #fff;
            border: none;
            padding: 10px 15px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 14px;
            display: inline-block;
            cursor: pointer;
        }

            .btn:hover {
                background-color: #580b92;
            }

        .btn-secondary {
            background-color: #6c757d;
            margin-left: 10px;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }

        small {
            font-size: 12px;
            color: #888;
        }

        .text-danger {
            font-size: 12px;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>新增餐點</h1>
        <form asp-action="CreateMeal" method="post" enctype="multipart/form-data">
            <!-- 餐點名稱 -->
            <div class="form-group mb-3">
                <label asp-for="MEAL_NAME" class="form-label">餐點名稱</label>
                <input asp-for="MEAL_NAME" class="form-control" required />
                <span asp-validation-for="MEAL_NAME" class="text-danger"></span>
            </div>

            <!-- 價格 -->
            <div class="form-group mb-3">
                <label asp-for="MEAL_PRICE" class="form-label">價格</label>
                <input asp-for="MEAL_PRICE" class="form-control" type="number" step="0.01" required />
                <span asp-validation-for="MEAL_PRICE" class="text-danger"></span>
            </div>

            <!-- 描述 -->
            <div class="form-group mb-3">
                <label asp-for="MEAL_DESCRIPTION" class="form-label">描述</label>
                <textarea asp-for="MEAL_DESCRIPTION" class="form-control" rows="3" required></textarea>
                <span asp-validation-for="MEAL_DESCRIPTION" class="text-danger"></span>
            </div>

            <!-- 食材 -->
            <div class="form-group mb-3">
                <label asp-for="MEAL_INGREDIENTS" class="form-label">食材</label>
                <textarea asp-for="MEAL_INGREDIENTS" class="form-control" rows="3" required></textarea>
            </div>

            <!-- 過敏原 -->
            <div class="form-group mb-3">
                <label asp-for="MEAL_ALLERGENINFO" class="form-label">過敏原</label>
                <textarea asp-for="MEAL_ALLERGENINFO" class="form-control" rows="3" required></textarea>
            </div>

            <!-- 圖片 -->
            <div class="form-group mb-4">
                <label for="imageFile" class="form-label">圖片 (可選)</label>
                <input type="file" name="imageFile" class="form-control" accept="image/*" />
                <small class="form-text">如果不選擇圖片，將使用默認圖片。</small>
            </div>

            <!-- 提交按鈕 -->
            <div class="text-center">
                <button type="submit" class="btn">新增餐點</button>
                <a asp-controller="Restaurant" asp-action="Dashboard" class="btn btn-secondary">返回上一頁</a>
            </div>
        </form>
    </div>

    <!-- 添加模型驗證腳本 -->
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
