@{
    ViewBag.Title = "忘記密碼";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        /* Remove Navigation and Footer */
        nav, footer {
            display: none !important;
        }

        /* General Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }
        
        body {
            display: flex;
            justify-content: center; /* 水平置中 */
            align-items: center; /* 垂直置中 */
            height: 100vh; /* 讓高度填滿視窗 */
            margin: 0;
            background-color: #f8f9fa;
        }

        .reset-container {
            background: #ffffff;
            border: 1px solid #ddd;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            width: 100%;
            max-width: 500px; /* 調整最大寬度 */
            padding: 20px;
            text-align: center;
            margin: auto; /* 保證容器在視覺上置中 */
        }

            .reset-container h1 {
                color: #6a0dad;
                margin-bottom: 20px;
                font-size: 1.8rem;
            }

        /* Input Fields */
        .input-field {
            margin-bottom: 20px;
            position: relative;
            text-align: left;
        }

            .input-field label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
                color: #333;
            }

            .input-field input {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 4px;
                font-size: 1rem;
            }

        /* Password Eye Icon */
        .password-container {
            position: relative;
        }

            .password-container .fa-eye,
            .password-container .fa-eye-slash {
                position: absolute;
                right: 10px;
                top: 50%;
                transform: translateY(-50%);
                cursor: pointer;
                color: #555;
                font-size: 1.1rem;
            }

        /* Submit Button */
        .reset-button {
            width: 100%;
            padding: 10px;
            background-color: #6a0dad;
            color: #fff;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
            cursor: pointer;
        }

            .reset-button:hover {
                background-color: #580b92;
            }

        /* Success and Error Messages */
        .message {
            margin-bottom: 20px;
            font-size: 1rem;
        }

        .error {
            color: red;
        }

        .success {
            color: green;
        }
    </style>
</head>
<body>
    <!-- Reset Password Container -->
    <div class="reset-container">
        <h1>@ViewBag.Title</h1>

        <!-- Error Message -->
        @if (ViewBag.ErrorMessage != null)
        {
            <p class="message error">@ViewBag.ErrorMessage</p>
        }

        <!-- Success Message -->
        @if (ViewBag.SuccessMessage != null)
        {
            <p class="message success">@ViewBag.SuccessMessage</p>
            <form method="get" action="/Restaurant/RestLogin">
                <button type="submit" class="reset-button">返回登入頁面</button>
            </form>
        }
        else
        {
            <!-- Reset Form -->
            <form method="post" action="/Restaurant/ForgotPassword">
                <!-- Restaurant ID -->
                <div class="input-field">
                    <label for="Rid">餐廳 ID:</label>
                    <input type="number" id="Rid" name="Rid" required>
                </div>

                <!-- Restaurant Name -->
                <div class="input-field">
                    <label for="RestName">餐廳名稱:</label>
                    <input type="text" id="RestName" name="RestName" required>
                </div>

                <!-- New Password -->
                <div class="input-field password-container">
                    <label for="NewPassword">新密碼:</label>
                    <input type="password" id="NewPassword" name="NewPassword" required>
                    <i class="fas fa-eye" id="togglePassword"></i>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="reset-button">重置密碼</button>
            </form>
        }
    </div>

    <!-- JavaScript for Toggle Password -->
    <script>
        const togglePassword = document.getElementById('togglePassword');
        const passwordField = document.getElementById('NewPassword');

        togglePassword.addEventListener('click', function () {
            const type = passwordField.type === "password" ? "text" : "password";
            passwordField.type = type;
            this.classList.toggle('fa-eye');
            this.classList.toggle('fa-eye-slash');
        });
    </script>
</body>
</html>
