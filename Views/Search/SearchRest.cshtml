@{
    ViewBag.Title = "Search Restaurant";
    Layout = "~/Views/Shared/_UserLayout.cshtml"; // 使用 UserLayout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>


        .search-container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            height: 80vh;
        }

        input[type="text"] {
            padding: 10px;
            width: 300px;
            margin-bottom: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        button {
            padding: 10px 20px;
            background-color: #6a0dad;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="search-container">
        <h1>Search Restaurant</h1>
        <form asp-action="SearchRestResult" method="post">
            <input type="text" name="searchText" placeholder="Enter restaurant name or address" />
            <button type="submit">Search</button>
        </form>
    </div>
</body>
</html>
