@{
    ViewBag.Title = "No Results";
    Layout = "~/Views/Shared/_UserLayout.cshtml"; // 使用 UserLayout
}

@section Styles {
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .search-container {
            max-width: 900px;
            margin: 50px auto 20px auto;
            padding: 20px;
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            position: relative;
        }

        .toggler {
            margin-right: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background: white;
            cursor: pointer;
        }

            .toggler i {
                color: white;
                font-size: 1.5rem;
            }

        .search-input-wrapper {
            display: flex;
            flex: 1;
            background: #eee;
            border-radius: 5px;
            padding: 10px;
        }

            .search-input-wrapper input {
                border: none;
                background: transparent;
                flex: 1;
                outline: none;
                font-size: 1rem;
            }

            .search-input-wrapper button {
                background: none;
                border: none;
                cursor: pointer;
                font-size: 1.2rem;
                color: #6a0dad;
            }

        .no-result-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: calc(100vh - 200px); /* 減去導航欄與搜索框的高度 */
            text-align: center;
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

            .no-result-container h1 {
                font-size: 2rem;
                color: #6a0dad;
                margin-bottom: 20px;
            }

            .no-result-container p {
                font-size: 1rem;
                color: #666;
                margin-bottom: 30px;
            }

        .btn-back {
            display: inline-block;
            padding: 12px 30px;
            background-color: #6a0dad;
            color: white;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            font-size: 1rem;
            transition: background-color 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .btn-back:hover {
                background-color: #580b92;
            }

        .no-result-container img {
            width: 150px;
            height: auto;
            margin-bottom: 20px;
        }
    </style>
}

<form method="get" action="@Url.Action("SearchMealResult", "Search")" class="search-container">
    <!-- Toggler -->
    <div class="toggler">
        <i class="fas fa-bars"></i>
    </div>
    <!-- Search Input -->
    <div class="search-input-wrapper">
        <input type="text" name="searchText" placeholder="Hinted search text">
        <button type="submit"><i class="fas fa-search"></i></button>
    </div>
</form>

<div class="no-result-container">
    <h1>Oops! No Results Found</h1>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
