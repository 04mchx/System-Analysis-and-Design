@model List<RestaurantViewModelNew>

@{
    ViewBag.Title = "Search Results";
    Layout = "~/Views/Shared/_UserLayout.cshtml"; // 使用 UserLayout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .search-container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 20px 0;
            padding: 0 20px;
        }

        .search-bar {
            width: 100%;
            max-width: 600px;
            display: flex;
            align-items: center;
            background-color: #eaeaea;
            border-radius: 30px;
            padding: 10px;
        }

            .search-bar input[type="text"] {
                flex-grow: 1;
                border: none;
                background: none;
                padding: 10px;
                font-size: 1rem;
                outline: none;
            }

            .search-bar button {
                background: none;
                border: none;
                cursor: pointer;
            }

        .result-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            padding: 20px;
        }

        .result-item {
            width: 300px;
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            background-color: white;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .result-item img {
                width: 100%;
                height: 150px;
                object-fit: cover;
                border-radius: 10px;
                margin-bottom: 10px;
            }

            .result-item h2 {
                margin: 10px 0;
            }

            .result-item p {
                font-size: 0.9rem;
                color: gray;
            }

            .result-item button {
                padding: 10px 20px;
                background-color: #6a0dad;
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

                .result-item button:hover {
                    background-color: #580b92;
                }
    </style>
</head>
<body>
    <div class="search-container">
        <form asp-controller="Search" asp-action="SearchRestResult" method="get" class="search-bar">
            <input type="text" name="query" placeholder="Input restaurant name" />
            <button type="submit"><i class="fas fa-search"></i></button>
        </form>
    </div>

    <div class="result-container">
        @foreach (var rest in Model)
        {
            <div class="result-item">
                <img src="@Url.Content(rest.REST_IMAGE)" alt="@rest.REST_NAME" />
                <h2>@rest.REST_NAME</h2>
                <p>@rest.REST_ADDRESS</p>
                <form asp-controller="Search" asp-action="RestDetail" method="get">
                    <input type="hidden" name="restId" value="@rest.REST_ID" />
                    <button type="submit">More</button>
                </form>
            </div>
        }
    </div>
</body>
</html>
